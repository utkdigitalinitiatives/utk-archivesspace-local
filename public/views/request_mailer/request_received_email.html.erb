<h1><%=t('request.email_header') %></h1>

<div class="request">
  <h2>Record Requested</h2>
  <strong>Title</strong>: <%= @request.title %><br>
  <% url = "#{AppConfig[:public_proxy_url].sub(/\/^/, '')}#{@request.request_uri}" %>
  <strong>URL</strong>: <%= link_to url, url %>
</div>

<div class="user">
  <h2>Your Details</h2>
  <strong>Name: </strong> <%= @request.user_name %><br>
  <strong>Email: </strong> <a href="mailto:<%= @request.user_email %>"><%= @request.user_email %></a><br/>
  <strong><%=t('request.date') %>:</strong> <%= @request.date %><br>
</div>

<div class="user">
  <h2>Notes for Staff: </h2>
  <strong><%=t('request.number') %>: </strong> <%= @request.number %><br>
  <strong><%=t('request.box_number') %>: </strong> <%= @request.box_number %><br>
  <strong><%=t('request.class_project') %>: </strong> <%= @request.answer %><br>
  <strong>Other Infomation: </strong> <%= (@request.note || "").gsub(/[\n\r]/,"<br>\n").html_safe %>
</div>
